<Window x:Class="SkySpeed.SkySpeedMainWindow.SkySpeedWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SkySpeed.SkySpeedMainWindow"
        mc:Ignorable="d"
        Title="SkySpeed - Airport Agent (APT)"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        KeyDown="Window_KeyDown"
        Closing="MainWindow_Closing">

    <DockPanel >
        <Menu DockPanel.Dock="Top" FontWeight="DemiBold" Background="{StaticResource MainMenuBrush}">
            <MenuItem Header="_Booking" Click="BookingMenu_Click">
            </MenuItem>

            <MenuItem Header="_Reservation">
            </MenuItem>

            <MenuItem Header="_End Record">
            </MenuItem>

            <MenuItem Header="_PNR Retrieve">
            </MenuItem>

            <MenuItem Header="_Help">
                <MenuItem Header="_About Sky Speed" Click="AboutSkySpeed_Click"/>
            </MenuItem>

            <MenuItem Header="_Calculator" Click="Calculator_Click">
            </MenuItem>

            <MenuItem Header="_Notepad" Click="Notepad_Click">
            </MenuItem>
        </Menu>

        <Grid DockPanel.Dock="Left" Width="200" Margin="3,0,0,0" Background="{StaticResource SectionBackgroundBrush}">
            <StackPanel>

                <Grid Background="{StaticResource SectionBackgroundBrush}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <Label Content="Reservation" FontWeight="DemiBold" Foreground="White" Background="{StaticResource HeaderBackgroundBrush}" Grid.Row="0" />

                    <Grid Grid.Row="1" >
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Label Content="Booking:" FontWeight="DemiBold" Grid.Column="0"  Grid.Row="0"/>
                        <Label Content="Creating" Name="BookingLabel" Grid.Column="1" Grid.Row="0"/>

                        <Label Content="Payment:" FontWeight="DemiBold" Grid.Column="0" Grid.Row="1"/>
                        <Label Content="Not Available" Name="PaymentLabel" Grid.Column="1" Grid.Row="1"/>

                    </Grid>
                </Grid>

                <Border Margin="0,3,0,0" BorderBrush="{StaticResource HeaderBackgroundBrush}" BorderThickness="1">
                    <StackPanel Background="{StaticResource SectionBackgroundBrush}">
                        <Expander Header="Flight Information" IsExpanded="True" FontWeight="DemiBold" Foreground="White" Background="{StaticResource HeaderBackgroundBrush}">
                            <TextBlock Text=""  Name="FlightInformationExpanderTextBlock" Foreground="Black" Background="White" TextWrapping="Wrap" MinHeight="40"/>
                        </Expander>
                    </StackPanel>
                </Border>

                <Border Margin="0,3,0,0" BorderBrush="{StaticResource HeaderBackgroundBrush}" BorderThickness="1">
                    <StackPanel Background="{StaticResource SectionBackgroundBrush}">
                        <Expander Header="Passengers" IsExpanded="True" FontWeight="DemiBold" Foreground="White" Background="{StaticResource HeaderBackgroundBrush}">
                            <TextBlock Text="" Name="PassengersExpanderTextBlock" Foreground="Black" Background="White" TextWrapping="Wrap" MinHeight="40" />
                        </Expander>
                    </StackPanel>
                </Border>

                <Border Margin="0,3,0,0" BorderBrush="{StaticResource HeaderBackgroundBrush}" BorderThickness="1">
                    <StackPanel Background="{StaticResource SectionBackgroundBrush}">
                        <Expander Header="Contact Information" IsExpanded="True" FontWeight="DemiBold" Foreground="White" Background="{StaticResource HeaderBackgroundBrush}">
                            <TextBlock Text=""  Name="ContactExpanderTextBlock" Foreground="Black" Background="White" TextWrapping="Wrap" MinHeight="40"/>
                        </Expander>
                    </StackPanel>
                </Border>

                <Border Margin="0,3,0,0" BorderBrush="{StaticResource HeaderBackgroundBrush}" BorderThickness="1">
                    <StackPanel Background="{StaticResource SectionBackgroundBrush}">
                        <Expander Header="Payments" IsExpanded="True" FontWeight="DemiBold" Foreground="White" Background="{StaticResource HeaderBackgroundBrush}">
                            <TextBlock Text="" Foreground="Black" Background="White" TextWrapping="Wrap" />
                        </Expander>
                    </StackPanel>
                </Border>

                <Border Margin="0,3,0,0" BorderBrush="{StaticResource HeaderBackgroundBrush}" BorderThickness="1">
                    <StackPanel Background="{StaticResource SectionBackgroundBrush}">
                        <Expander Header="Comments" IsExpanded="True" FontWeight="DemiBold" Foreground="White" Background="{StaticResource HeaderBackgroundBrush}">
                            <TextBlock Text="" Foreground="Black" Background="White" TextWrapping="Wrap" />
                        </Expander>
                    </StackPanel>
                </Border>

            </StackPanel>
        </Grid>

        <Grid DockPanel.Dock="Right" Width="Auto" Margin="0,0,3,0" Background="{StaticResource SectionBackgroundBrush}" >
            <Label Content="Coming Soon" FontWeight="DemiBold" HorizontalAlignment="Center" VerticalAlignment="Center" />
        </Grid>

        <Grid DockPanel.Dock="Bottom" Margin="0,0,3,5" HorizontalAlignment="Right">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <Button Content="Back" Name="BackButton" Margin="0,0,5,0" Width="75" Grid.Column="0" Click="BackButton_Click"/>
            <Button Content="Next" Name="NextButton" Width="75" Grid.Column="1" Click="NextButton_Click" />
        </Grid>

        <!---Add pages-->
        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
            <Grid Margin="3,0,3,3" Background="{StaticResource SectionBackgroundBrush}">
                <Frame Name="NavigationFrame" NavigationUIVisibility="Hidden" />
            </Grid>
        </ScrollViewer>
    </DockPanel>
</Window>